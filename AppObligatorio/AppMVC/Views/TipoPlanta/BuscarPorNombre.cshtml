@model Dominio.EntidadesNegocio.TipoPlanta

@{
    ViewData["Title"] = "BuscarPorNombre";
}

<h1>Buscar por nombre</h1>

<span class="text-danger">@ViewBag.Error</span>

<div class="row">
    <div class="col-md-4">
        <form asp-action="BuscarPorNombre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Nombre del tipo de planta</label>
                <input type="text" class="form-control" name="nombreBuscado"/>
            </div>


            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>
<div class="m-4 text-right">
    <a asp-action="Index">Volver a la lista</a>
</div>